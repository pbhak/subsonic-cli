{
  "name": "subsonic-cli",
  "version": "1.0.1",
  "description": "CLI application to interact with a Subsonic server or a Subsonic API-compatible server",
  "bin": {
    "scli": "dist/index.js"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --executable --target node",
    "prepublishOnly": "bun run build"
  },
  "module": "src/index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/fuzzy-search": "^2.1.5",
    "@types/play-sound": "^1.1.2",
    "@types/commander": "^2.12.5",
    "@types/js-yaml": "^4.0.9"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "js-md5": "^0.8.3",
    "js-yaml": "^4.1.0"
  }
}
